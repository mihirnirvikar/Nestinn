<%- layout('layouts/boilerplate'); %>

    <body>
        <div class="formContainer">
            <h3>Welcome to NestInn</h3>
            <form action="http://localhost:8080/register" method="POST" class="row-100 needs-validation" novalidate>

                <div class="mb-3">
                    <label for="validationCustom01" class="form-label">Name</label>
                    <input type="text" class="form-control" id="validationCustom01" name="name" placeholder="Enter Name"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please provide a valid Name.
                    </div>
                </div>

                <div class="mb-3">
                    <label for="validationCustom01" class="form-label">Username</label>
                    <input type="text" class="form-control" id="validationCustom01" name="username"
                        placeholder="Enter Name" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please provide a valid Username.
                    </div>
                </div>

                <div class="mb-3">
                    <label for="validationCustom02" class="form-label">Email</label>
                    <input type="email" class="form-control" id="validationCustom02" name="email"
                        placeholder="Enter Email" required></input>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please provide a valid Email.
                    </div>
                </div>

                <div class="mb-3">
                    <label for="validationCustom02" class="form-label">Password</label>
                    <input type="password" class="form-control" id="validationCustom02" name="password"
                        placeholder="Enter Email" required></input>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please provide a valid Password.
                    </div>
                </div>


                <div class="newListingFormBtnDiv mb-3">
                    <button class="newListingFormBtn btn btn-dark" type="submit">Register</button>
                </div>

            </form>
        </div>
    </body>